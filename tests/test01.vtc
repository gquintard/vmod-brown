varnishtest "is_match()"

server s1 {} -start

varnish v1 -arg "-p thread_pool_stack=160k" -vcl+backend {
	import rers from "${vmod}";

	sub vcl_init {
		new re_store = rers.store(2);
	}

	sub vcl_recv {
		return (synth(200));
	}

	sub vcl_synth {
		set resp.http.match_first = re_store.is_match(req.url, "first");
		set resp.http.match_second = re_store.is_match(req.url, "second");
		set resp.http.match_third = re_store.is_match(req.url, "third");
		set resp.http.match_fourth = re_store.is_match(req.url, "fourth");
	}
} -start

client c1 {
	txreq -url "/first/second/third"
	rxresp
	expect resp.http.match_first == true
	expect resp.http.match_second == true
	expect resp.http.match_third == true
	expect resp.http.match_fourth == false
} -run
